<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_110"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/qb_px_15"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="6dp"
        app:elevation="3dp">


        <ImageView
            android:id="@+id/item_asset_im"
            android:layout_width="@dimen/qb_px_110"
            android:layout_height="@dimen/qb_px_110"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_marginLeft="@dimen/qb_px_120"
            android:id="@+id/item_asset_tv"
            android:layout_width="@dimen/qb_px_290"
            android:layout_height="@dimen/qb_px_20" />

        <TextView
            android:layout_marginLeft="@dimen/qb_px_120"
           android:layout_marginTop="@dimen/qb_px_40"
            android:id="@+id/item_asset_money"
            android:layout_width="@dimen/qb_px_144"
            android:layout_height="@dimen/qb_px_15" />

        <TextView
            android:layout_marginTop="@dimen/qb_px_80"
            android:layout_marginLeft="@dimen/qb_px_120"
            android:id="@+id/item_asset_time"
            android:layout_width="@dimen/qb_px_86"
            android:layout_height="@dimen/qb_px_10" />


    </androidx.cardview.widget.CardView>
</LinearLayout>